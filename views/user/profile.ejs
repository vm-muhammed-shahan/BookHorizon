
<%- include("../../views/partials/user/header") %>

<div class="main-layout">
  <%- include("../../views/partials/user/sidebar") %>
  

  <div class="content-wrapper">
    <div class="profile-container">
      <div class="card">
        <div class="card-header">
          <h2>My Profile</h2>
        </div>
        
        <div class="card-body">
          <div class="profile-info">
            
            
            <div class="info-section">
              <div class="info-item">
                <span class="info-label">Name:</span>
                <span class="info-value"><%= user.name %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Email:</span>
                <span class="info-value"><%= user.email %></span>
              </div>
              <div class="info-item">
                <span class="info-label">Phone:</span>
                <span class="info-value"><%= user.phone || 'Not provided' %></span>
              </div>
            </div>
          </div>
          
          <div class="profile-actions">
            <a href="/profile/edit" class="btn btn-primary">Edit Profile</a>
            <a href="/profile/forgot-password" class="btn btn-secondary">forgot Password</a>
            <a href="/profile/change-password" class="btn btn-secondary">change Password</a>
            <a href="/change-email" class="btn btn-secondary">change email</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include("../../views/partials/user/footer") %>

<style>
  body {
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    background-color: #f5f5f5;
    color: #333;
    line-height: 1.6;
  }

  /* Main layout - the key fix */
  .main-layout {
    display: flex;
    min-height: 100vh;
    position: relative;
  }

  /* Content wrapper - fixed to work with flex layout */
  .content-wrapper {
    flex: 1;
    padding: 20px;
    background-color: #f5f5f5;
    min-height: 100vh;
  }

  /* Sidebar container styling */
  .sidebar-container {
    width: 250px;
    flex-shrink: 0;
    background-color: #fff;
    border-right: 1px solid #e0e0e0;
    overflow-y: auto;
    z-index: 90;
  }

  /* Responsive override for mobile when sidebar collapses */
  @media (max-width: 768px) {
    .main-layout {
      flex-direction: column;
    }
    
    .content-wrapper {
      margin-left: 0;
    }
    
    .sidebar-container {
      width: 100%;
      border-right: none;
      border-bottom: 1px solid #e0e0e0;
    }
  }

  /* Profile container */
  .profile-container {
    max-width: 1000px;
    margin: 20px auto;
  }

  /* Card design */
  .card {
    background-color: white;
    border-radius: 8px;
    box-shadow: 0 2px 10px rgba(240, 236, 236, 0.05);
    margin-bottom: 20px;
    overflow: hidden;
  }

  .card-header {
    padding: 20px 25px;
    border-bottom: 1px solid #eaeaea;
    background-color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }

  .card-header h2 {
    font-size: 20px;
    font-weight: 600;
    color: #000;
    margin: 0;
  }

  .card-body {
    padding: 25px;
  }

  /* Profile info section */
  .profile-info {
    display: flex;
    align-items: flex-start;
    margin-bottom: 30px;
    padding-bottom: 25px;
    border-bottom: 1px solid #eaeaea;
  }

  .profile-image-large {
    width: 120px;
    height: 120px;
    margin-right: 30px;
    border-radius: 8px;
    overflow: hidden;
    border: 2px solid #eaeaea;
  }

  .profile-image-large img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .info-section {
    flex: 1;
  }

  .info-item {
    padding: 12px 0;
    border-bottom: 1px solid #f0f0f0;
    display: flex;
  }

  .info-item:last-child {
    border-bottom: none;
  }

  .info-label {
    font-weight: 600;
    width: 120px;
    color: #555;
  }

  .info-value {
    color: #333;
    flex: 1;
  }

  /* Profile actions */
  .profile-actions {
    margin-top: 20px;
    display: flex;
    gap: 15px;
    justify-content: flex-end;
  }

  .btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    font-weight: 500;
    padding: 10px 24px;
    font-size: 14px;
    border-radius: 6px;
    transition: all 0.15s ease-in-out;
    text-decoration: none;
  }

  .btn-primary {
    color: #fff;
    background-color: #000;
    border: 1px solid #000;
  }

  .btn-primary:hover {
    background-color: #333;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .btn-secondary {
    color: #fff;
    background-color: #000;
    border: 1px solid #000;
  }

  .btn-secondary:hover {
    background-color: #333;
    transform: translateY(-2px);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  /* Updated Header styling */
  .header {
    width: 100%;
    background-color: #ffffff;
    border-bottom: 1px solid #e0e0e0;
    display: flex;
    align-items: center;
    padding: 0 20px;
    z-index: 100;
  }

  .header .site-name {
    font-size: 1.5rem;
    font-weight: 600;
    color: #000;
  }

  /* Responsive design */
  @media (max-width: 992px) {
    .sidebar-container {
      width: 70px; /* Collapsed sidebar width */
    }
  }

  @media (max-width: 768px) {
    .profile-info {
      flex-direction: column;
    }
    .profile-image-large {
      margin: 0 auto 20px;
    }
    .info-item {
      flex-direction: column;
    }
    .info-label {
      width: 100%;
      margin-bottom: 5px;
    }
    .profile-actions {
      justify-content: center;
    }
  }

  @media (max-width: 576px) {
    .content-wrapper {
      padding: 10px;
    }
    .card-body {
      padding: 15px;
    }
  }
</style>



