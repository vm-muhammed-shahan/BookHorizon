<style>
  body {
    font-family: Arial, sans-serif;
    color: #000;
    background-color: #fff;
    line-height: 1.6;
  }
  h2 {
    border-bottom: 2px solid #000;
    padding-bottom: 8px;
    margin-bottom: 20px;
  }
  ul {
    list-style-type: none;
    padding: 0;
  }
  li {
    border: 1px solid #ddd;
    padding: 15px;
    margin-bottom: 10px;
    background-color: #f9f9f9;
  }
  button {
    background-color: #333;
    color: white;
    border: none;
    padding: 6px 12px;
    cursor: pointer;
    transition: background-color 0.3s;
  }
  button:hover {
    background-color: #000;
  }
  input[type="text"] {
    padding: 6px;
    border: 1px solid #ccc;
    margin-right: 10px;
    width: 200px;
  }
  form {
    margin-top: 10px;
    display: inline-block;
  }
  p.total {
    font-weight: bold;
    font-size: 1.2em;
    border-top: 1px solid #ddd;
    padding-top: 10px;
  }
  .status {
    display: inline-block;
    padding: 3px 8px;
    background-color: #eee;
    border-radius: 3px;
  }
  .order-meta {
    margin-bottom: 20px;
  }
</style>

<div class="order-container">
  <h2>Order Detail: <%= order.orderId %></h2>
  <div class="order-meta">
    <p><strong>Status:</strong> <span class="status"><%= order.status %></span></p>
    <p><strong>Ordered On:</strong> <%= order.createdOn.toDateString() %></p>
  </div>

  <ul>
    <% order.orderedItems.forEach(item => { %>
      <li>
        <strong><%= item.product.name %></strong> - ₹<%= item.price %> x<%= item.quantity %>
        <% if (order.status === 'Pending' || order.status === 'processing') { %>
          <form method="POST" action="/orders/cancel">
            <input type="hidden" name="orderId" value="<%= order.orderId %>">
            <input type="hidden" name="productId" value="<%= item.product._id %>">
            <input type="text" name="reason" placeholder="Reason (optional)">
            <button type="submit">Cancel</button>
          </form>
        <% } %>
        <% if (order.status === 'Delivered') { %>
          <form method="POST" action="/orders/return">
            <input type="hidden" name="orderId" value="<%= order.orderId %>">
            <input type="hidden" name="productId" value="<%= item.product._id %>">
            <input type="text" name="reason" required placeholder="Reason for return">
            <button type="submit">Return</button>
          </form>
        <% } %>
      </li>
    <% }) %>
  </ul>

  <p class="total"><strong>Total:</strong> ₹<%= order.finalAmount %></p>
</div>