    function resendOTP() {
      clearInterval(timerInterval);
      timer = 60;
      document.getElementById("otp").disabled = false;
      document.getElementById("timerValue").classList.remove("expired");
      document.getElementById("timerValue").textContent = timer;
      startTimer();
      $.ajax({
        type: "POST",
        url: "/resend-otp",
        data: { email: "<%= email %>" },
        success: function (response) {
          console.log("Resend OTP response:", response);
          if (response.success) {
            Swal.fire({
              icon: "success",
              title: "OTP Resent Successfully",
              showConfirmButton: false,
              timer: 1500
            });
          } else {
            Swal.fire({
              icon: "error",
              title: "Error",
              text: response.message || "An error occurred while resending OTP. Please try again."
            }).then(() => {
              if (response.message === "Email not found in session" || response.message === "Session expired. Please sign up again.") {
                console.log("Redirecting to /signup due to session error");
                window.location.href = "/signup";
              }
            });
          }
        },
        error: function (xhr, status, error) {
          console.error("Resend OTP error:", status, error, xhr.responseText);
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "An error occurred while resending OTP. Please try again."
          }).then(() => {
            console.log("Redirecting to /signup due to resend OTP error");
            window.location.href = "/signup";
          });
        }
      });
    }

    
    document.getElementById("otpForm").addEventListener("submit", function (event) {
      event.preventDefault(); // Prevent default form submission
      const otpInput = document.getElementById("otp").value;
      if (!/^\d{6}$/.test(otpInput)) {
        Swal.fire({
          icon: "error",
          title: "Error",
          text: "OTP must be a 6-digit number"
        });
        return;
      }
      $.ajax({
        type: "POST",
        url: "/verify-otp",
        data: { otp: otpInput },
        success: function (response) {
          console.log("Verify OTP response:", response);
          if (response.success) {
            Swal.fire({
              icon: "success",
              title: "OTP Verified Successfully",
              showConfirmButton: false,
              timer: 1500
            }).then(() => {
              const redirectUrl = response.redirectUrl || "/login";
              console.log("Attempting redirect to:", redirectUrl);
              try {
                window.location.href = redirectUrl;
              } catch (err) {
                console.error("Redirect failed:", err);
                window.location.assign(redirectUrl); // Fallback
              }
            }).catch((error) => {
              console.error("SweetAlert error:", error);
              const redirectUrl = response.redirectUrl || "/login";
              console.log("Falling back to redirect to:", redirectUrl);
              window.location.href = redirectUrl; // Fallback
            });
          } else {
            Swal.fire({
              icon: "error",
              title: "Error",
              text: response.message || "Invalid OTP, please try again"
            }).then(() => {
              if (response.message === "Session expired. Please sign up again.") {
                console.log("Redirecting to /signup due to session expired");
                window.location.href = "/signup";
              }
            });
          }
        },
        error: function (xhr, status, error) {
          console.error("Verify OTP error:", status, error, xhr.responseText);
          Swal.fire({
            icon: "error",
            title: "Error",
            text: "An error occurred while verifying OTP. Please try again."
          });
        }
      });
    });
