<%- include("../../views/partials/user/header") %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">

<style>
  :root {
    --primary-color: #1e918b;
    --dark-color: #2d3748;
    --light-bg: #f8f9fa;
    --light: #fff;
    --border-radius: 12px;
    --transition: 0.3s ease;
    --card-gap: 25px;
    --card-max-width: 280px;
    --image-height: 250px;
  }

  .main-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 20px;
    background-color: var(--light-bg);
    font-family: 'Poppins', 'Arial', sans-serif;
  }

  .breadcrumb {
    display: flex;
    gap: 8px;
    margin-bottom: 20px;
    font-size: 14px;
    color: #718096;
  }

  .breadcrumb a {
    color: #4a5568;
    text-decoration: none;
    transition: color var(--transition);
  }

  .breadcrumb a:hover {
    color: var(--primary-color);
  }

  .breadcrumb span:after {
    content: 'â€º';
    margin: 0 8px;
  }

  .breadcrumb span:last-child:after {
    content: '';
  }

  .shop-heading {
    font-size: 2rem;
    font-weight: 600;
    color: var(--dark-color);
    margin-bottom: 30px;
    position: relative;
  }

  .shop-heading:after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    width: 60px;
    height: 3px;
    background-color: var(--primary-color);
    border-radius: 2px;
  }

  .shop-topbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 30px;
  }

  .search-form {
    display: flex;
    align-items: center;
    background: var(--light);
    border-radius: 50px;
    overflow: hidden;
    max-width: 350px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08);
    border: 1px solid #e2e8f0;
    transition: all var(--transition);
  }

  .search-form:focus-within {
    box-shadow: 0 4px 20px rgba(30, 145, 139, 0.15);
    border-color: var(--primary-color);
  }

  .search-input {
    flex: 1;
    padding: 12px 20px;
    border: none;
    font-size: 14px;
    outline: none;
    color: #4a5568;
  }

  .search-button {
    padding: 12px 25px;
    background: var(--primary-color);
    color: var(--light);
    border: none;
    cursor: pointer;
    font-size: 14px;
    font-weight: 600;
    border-radius: 50px;
    transition: all var(--transition);
  }

  .search-button:hover {
    background: #167571;
    transform: translateY(-2px);
  }

  .product-list-container {
    display: flex;
    gap: 30px;
    align-items: flex-start;
  }

  .sidebar {
    flex: 0 0 280px;
    background: var(--light);
    border-radius: var(--border-radius);
    padding: 25px;
    box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
    position: sticky;
    top: 20px;
    height: fit-content;
  }

  .filter-section+.price-filter {
    margin-top: 40px;
  }

  .filter-title {
    font-size: 16px;
    font-weight: 700;
    color: var(--dark-color);
    text-transform: uppercase;
    margin-bottom: 15px;
    position: relative;
    padding-bottom: 8px;
  }

  .filter-title:after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 40px;
    height: 2px;
    background: var(--primary-color);
    border-radius: 1px;
  }

  .filter-item {
    margin-bottom: 10px;
  }

  .filter-item label {
    font-size: 15px;
    color: #4a5568;
    cursor: pointer;
  }

  .filter-item input[type="checkbox"] {
    margin-right: 8px;
  }

  .price-filter {
    margin-top: 20px;
  }

  .price-filter input[type="range"] {
    width: 100%;
    margin: 10px 0;
  }

  .price-values {
    display: flex;
    justify-content: space-between;
    font-size: 14px;
    color: #777;
  }

  .filter-buttons {
    margin-top: 20px;
    display: flex;
    gap: 10px;
  }

  .filter-buttons button {
    padding: 10px 20px;
    border: none;
    border-radius: var(--border-radius);
    font-weight: 600;
    cursor: pointer;
    transition: all var(--transition);
  }

  .apply-filter-btn {
    background: var(--primary-color);
    color: var(--light);
  }

  .apply-filter-btn:hover {
    background: #167571;
    transform: translateY(-2px);
  }

  .clear-filter-btn {
    background: #e53e3e;
    color: var(--light);
  }

  .clear-filter-btn:hover {
    background: #c53030;
    transform: translateY(-2px);
  }

  .product-grid {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: var(--card-gap);
    justify-content: center;
  }

  .product-card {
    width: 100%;
    background: var(--light);
    border-radius: var(--border-radius);
    box-shadow: 0 5px 15px rgba(0, 0, 0, 0.05);
    overflow: hidden;
    display: flex;
    flex-direction: column;
    transition: all var(--transition);
  }

  .product-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 15px 30px rgba(0, 0, 0, 0.1);
  }

  .product-image-container {
    width: 100%;
    height: 260px;
    background: #f7f8f9;
    position: relative;
    overflow: hidden;
  }

  .product-card img {
    width: 100%;
    height: 100%;
    object-fit: contain;
    object-position: center;
    transition: transform var(--transition);
  }

  .product-card:hover img {
    transform: scale(1.05);
  }

  .product-info {
    padding: 15px;
    display: flex;
    flex-direction: column;
    flex-grow: 1;
  }

  .product-name {
    font-size: 16px;
    font-weight: 600;
    color: var(--dark-color);
    margin: 0 0 8px;
    line-height: 1.4;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    overflow: hidden;
    text-overflow: ellipsis;
    min-height: 2.8em;
  }

  .product-price {
    font-size: 18px;
    font-weight: 700;
    color: var(--primary-color);
    display: flex;
    align-items: center;
    gap: 8px;
    margin-top: auto;
  }

  .original-price {
    font-size: 14px;
    color: #a0aec0;
    text-decoration: line-through;
    font-weight: 400;
  }

  .discount-badge {
    position: absolute;
    top: 15px;
    left: 15px;
    background: #e53e3e;
    color: var(--light);
    padding: 5px 12px;
    border-radius: 20px;
    font-size: 12px;
    font-weight: 600;
    z-index: 2;
  }

  .wishlist-btn {
    position: absolute;
    top: 15px;
    right: 15px;
    background: rgba(187, 28, 28, 0.9);
    border: none;
    width: 38px;
    height: 38px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    transition: all var(--transition);
    z-index: 2;
    color: #e2e2e2;
    text-decoration: none;
  }

  .wishlist-btn:hover {
    background: rgba(255, 255, 255, 1);
    transform: translateY(-2px);
  }

  .wishlist-btn.active {
    color: #ff5252;
  }

  .add-to-cart-btn {
    margin: 12px 20px 20px;
    padding: 10px 0;
    background: var(--dark-color);
    color: var(--light);
    font-weight: 600;
    text-transform: uppercase;
    border: none;
    border-radius: var(--border-radius);
    letter-spacing: 0.5px;
    cursor: pointer;
    transition: background var(--transition), transform var(--transition);
    align-self: center;
    width: calc(100% - 40px);
  }

  .add-to-cart-btn:hover {
    background: var(--primary-color);
    transform: translateY(-2px);
  }

  .pagination {
    display: flex;
    justify-content: center;
    gap: 8px;
    margin: 50px 0 30px;
  }

  .pagination .btn {
    padding: 10px 16px;
    background: var(--light-bg);
    border: 1px solid #e2e8f0;
    border-radius: var(--border-radius);
    text-decoration: none;
    font-weight: 500;
    transition: all var(--transition);
    color: #4a5568;
  }

  .pagination .btn:hover {
    background: #e2e8f0;
    transform: translateY(-2px);
  }

  .pagination .active {
    background: var(--primary-color);
    color: var(--light);
    border-color: var(--primary-color);
  }

  @media (max-width: 992px) {
    .product-list-container {
      flex-direction: column;
    }

    .sidebar {
      position: static;
      width: 100%;
      margin-bottom: 30px;
    }
  }

  @media (max-width: 576px) {
    .product-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
      gap: 15px;
    }

    .shop-topbar {
      flex-direction: column;
      gap: 15px;
    }

    .search-form {
      width: 100%;
    }
  }
</style>

<div class="main-container">
  <section class="shop-page">
    <div class="breadcrumb">
      <span><a href="/">Home</a></span>
      <span>Shop</span>
    </div>

    <h1 class="shop-heading">Browse Products</h1>

    <div class="shop-topbar d-flex justify-content-between align-items-center mb-4">
      <form action="/search" method="GET" class="search-form d-flex">
        <input type="text" name="query" placeholder="Search products..." class="form-control me-2 search-input"
          value="<%= searchQuery || '' %>" />
        <% if (selectedCategories.length > 0) { %>
          <% selectedCategories.forEach(cat => { %>
            <input type="hidden" name="category" value="<%= cat %>">
          <% }) %>
        <% } %>
        <% if (sortOption) { %>
          <input type="hidden" name="sort" value="<%= sortOption %>">
        <% } %>
        <% if (maxPrice) { %>
          <input type="hidden" name="maxPrice" value="<%= maxPrice %>">
        <% } %>
        <button type="submit" class="search-button">Search</button>
      </form>

      <form id="sortForm" method="GET" action="/shop" class="d-flex align-items-center">
        <% if (selectedCategories.length > 0) { %>
          <% selectedCategories.forEach(cat => { %>
            <input type="hidden" name="category" value="<%= cat %>">
          <% }) %>
        <% } %>
        <% if (searchQuery) { %>
          <input type="hidden" name="query" value="<%= searchQuery %>">
        <% } %>
        <% if (maxPrice) { %>
          <input type="hidden" name="maxPrice" value="<%= maxPrice %>">
        <% } %>
        <select name="sort" class="form-select" onchange="this.form.submit()" style="width: 200px;">
          <option value="">Sort By</option>
          <option value="lowToHigh" <%= sortOption === 'lowToHigh' ? 'selected' : '' %>>Price: Low to High</option>
          <option value="highToLow" <%= sortOption === 'highToLow' ? 'selected' : '' %>>Price: High to Low</option>
          <option value="aToZ" <%= sortOption === 'aToZ' ? 'selected' : '' %>>Name: A-Z</option>
          <option value="zToA" <%= sortOption === 'zToA' ? 'selected' : '' %>>Name: Z-A</option>
        </select>
      </form>
    </div>

    <div class="product-list-container">
      <aside class="sidebar">
        <form id="filterForm" method="GET" action="/shop">
          <div class="filter-section">
            <div class="filter-title">Categories</div>
            <% categories.forEach(cat => { %>
              <div class="filter-item">
                <input type="checkbox" name="category" value="<%= cat._id %>"
                  id="category-<%= cat._id %>"
                  <%= selectedCategories.includes(cat._id.toString()) ? 'checked' : '' %>>
                <label for="category-<%= cat._id %>"><%= cat.name %></label>
              </div>
            <% }) %>
          </div>

          <div class="price-filter">
            <div class="filter-title">Price Range</div>
            <input type="range" min="0" max="5000" value="<%= maxPrice || 5000 %>"
              name="maxPrice" id="priceRange"
              oninput="document.getElementById('priceValue').innerText = this.value">
            <div class="price-values">
              <span>â‚¹0</span>
              <span id="priceValue"><%= maxPrice || 5000 %></span>
            </div>
          </div>

          <div class="filter-buttons">
            <button type="submit" class="apply-filter-btn">Apply Filter</button>
            <button type="button" class="clear-filter-btn" onclick="window.location.href='/shop'">Clear Filter</button>
          </div>

          <% if (sortOption) { %>
            <input type="hidden" name="sort" value="<%= sortOption %>">
          <% } %>
          <% if (searchQuery) { %>
            <input type="hidden" name="query" value="<%= searchQuery %>">
          <% } %>
        </form>
      </aside>

      <main class="product-grid">
        <% if (products && products.length) { %>
          <% products.forEach(prod => { %>
            <div class="product-card">
              <% const discount = Math.round((prod.regularPrice - prod.salePrice) / prod.regularPrice * 100); if (discount > 0) { %>
                <div class="discount-badge">
                  <%= discount %>% OFF
                </div>
              <% } %>
              <button class="wishlist-btn" onclick="addToWishlist('<%= prod._id %>', '<%= prod.productName %>')">
                <svg width="20" height="20" fill="currentColor" viewBox="0 0 24 24">
                  <path
                    d="M20.84 4.61a5.5 5.5 0 0 0-7.78 0L12 5.67l-1.06-1.06a5.5 5.5 0 0 0-7.78 7.78l1.06 1.06L12 21.23l7.78-7.78 1.06-1.06a5.5 5.5 0 0 0 0-7.78z" />
                </svg>
              </button>
              <a href="/productDetails?id=<%= prod._id %>">
                <div class="product-image-container">
                  <img src="/uploads/<%= prod.productImage[0] %>" alt="<%= prod.productName %>" />
                </div>
                <div class="product-info">
                  <h4 class="product-name">
                    <%= prod.productName %>
                  </h4>
                  <div class="product-price">
                    â‚¹<%= prod.salePrice.toLocaleString('en-IN') %>
                    <span class="original-price">â‚¹<%= prod.regularPrice.toLocaleString('en-IN') %></span>
                  </div>
                </div>
              </a>
              <% if (prod.status === 'Out of Stock') { %>
                <span class="badge bg-danger" style="margin-bottom: 8px;">Sold Out</span>
                <button class="add-to-cart-btn" disabled style="background-color: #ccc; cursor: not-allowed;">Out of Stock</button>
              <% } else { %>
                <button class="add-to-cart-btn"
                  onclick="addToCart('<%= prod._id %>', '<%= prod.productName %>')">Add to Cart</button>
              <% } %>
            </div>
          <% }) %>
        <% } else { %>
          <div class="no-products">
            <h3>No products found</h3>
            <p>Try a different category or search term.</p>
          </div>
        <% } %>
      </main>
    </div>

    <div class="pagination">
      <% if (currentPage > 1) { %>
        <a class="btn"
          href="/shop?page=<%= currentPage-1 %><%= queryString ? '&' + queryString : '' %>">Prev</a>
      <% } %>

      <% for (let i = 1; i <= totalPages; i++) { %>
        <a class="btn <%= currentPage === i ? 'active' : '' %>"
          href="/shop?page=<%= i %><%= queryString ? '&' + queryString : '' %>">
          <%= i %>
        </a>
      <% } %>

      <% if (currentPage < totalPages) { %>
        <a class="btn"
          href="/shop?page=<%= currentPage+1 %><%= queryString ? '&' + queryString : '' %>">Next</a>
      <% } %>
    </div>
  </section>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
  document.addEventListener('DOMContentLoaded', () => {
    document.querySelectorAll('.search-form, #sortForm, #filterForm').forEach(el => el.addEventListener('submit', showLoadingOverlay));
  });

  window.showLoadingOverlay = () => {
    const overlay = document.querySelector('.loading-overlay');
    if (overlay) overlay.classList.add('active');
    setTimeout(() => {
      if (overlay) overlay.classList.remove('active');
    }, 800);
  };

  window.addToCart = async (id, productName) => {
    try {
      const response = await fetch('/cart/add', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          productId: id
        })
      });
      const data = await response.json();
      if (data.success) {
        Swal.fire({
          title: 'Added to Cart!',
          text: `${productName} has been added to your cart.`,
          icon: 'success',
          timer: 1500,
          showConfirmButton: false
        });
      } else {
        Swal.fire({
          title: 'Error',
          text: data.message || 'Something went wrong',
          icon: 'error',
          confirmButtonText: 'OK'
        });
      }
    } catch (error) {
      console.error('Error adding to cart:', error);
      Swal.fire({
        title: 'Error',
        text: 'You need to be logged in to add items to cart.',
        icon: 'error',
        confirmButtonText: 'OK'
      });
    }
  };

  window.addToWishlist = async (productId, productName) => {
    try {
      const response = await fetch('/addToWishlist', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json'
        },
        body: JSON.stringify({ productId })
      });

      const data = await response.json();

      if (data.success) {
        Swal.fire({
          title: 'Added to Wishlist!',
          text: `${productName} has been added to your wishlist.`,
          icon: 'success',
          timer: 1500,
          showConfirmButton: false
        });
      } else if (data.message === 'Cannot add to wishlist - product is already in your cart') {
        Swal.fire({
          title: 'Oops!',
          text: 'Cannot add to wishlist - product is already in your cart',
          icon: 'error',
          timer: 1500,
          showConfirmButton: false
        });
      } else {
        Swal.fire({
          title: 'Oops!',
          text: data.message || 'Could not add to wishlist.',
          icon: 'error'
        });
      }
    } catch (error) {
      console.error('Fetch error:', error);
      Swal.fire({
        title: 'Login required',
        text: 'You need to login to do this action.',
        icon: 'error'
      });
    }
  };
</script>
<%- include("../../views/partials/user/footer") %>