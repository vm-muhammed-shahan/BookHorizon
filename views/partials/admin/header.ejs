<!DOCTYPE HTML>
<html lang="en">

<head>
    <meta charset="utf-8">
    <title>BookHorizon</title>
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta property="og:title" content="">
    <meta property="og:type" content="">
    <meta property="og:url" content="">
    <meta property="og:image" content="">
    <link rel="shortcut icon" type="image/x-icon" href="#">
    <link href="/admin-assets/css/main.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.6/dist/sweetalert2.min.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.4.min.js"></script>
    <style>
        body {
            background-color: #ffffff;
        }

        .navbar {
            background-color: #ffffff;
            border-bottom: 1px solid #e0e0e0;
        }

        .navbar-aside {
            background-color: #f0f0f0;
            box-shadow: 1px 0 5px rgba(0, 0, 0, 0.1);
        }

        .menu-item a.menu-link {
            color: #333333;
        }

        .menu-item a.menu-link:hover,
        .menu-item a.menu-link.active {
            background-color: #333333;
            color: #ffffff;
        }

        .dropdown-menu {
            background-color: #ffffff;
            border: 1px solid #e0e0e0;
        }

        .dropdown-item:hover {
            background-color: #333333;
            color: #ffffff;
        }

        .material-icons {
            color: #333333;
        }

        .btn-icon:hover .material-icons {
            color: #000000;
        }

        .brand-wrap {
            border-bottom: 1px solid #e0e0e0;
        }

        .btn-danger {
            background-color: #333333 !important;
            border-color: #333333 !important;
            color: #ffffff !important;
        }

        .btn-danger:hover {
            background-color: #000000 !important;
            border-color: #000000 !important;
        }

        .menu-item a.menu-link.active,
        .menu-item a.menu-link:hover {
            background-color: #000000;
        }

        .menu-item a.menu-link {
            transition: all 0.2s ease;
        }

        .menu-link {
            border-radius: 4px;
        }
        
    </style>
</head>

<body>
    <div class="screen-overlay"></div>
    <aside class="navbar-aside" id="offcanvas_aside">
        <div class="aside-top">
            <a href="/admin" class="brand-wrap">
                <span class="h4 m-0 fw-bold text-danger">BookHorizon</span>
            </a>
            
        </div>
        <nav>
            <ul class="menu-aside">


                <li class="menu-item">
                    <a class="menu-link d-flex align-items-center gap-2" href="/admin/dashboard">
                        <i class="material-icons" style="font-size: 1.5rem;">pie_chart</i>
                        <span class="menu-text" style="font-size: 1.2rem; font-weight: 600;">Dashboard</span>
                    </a>
                </li>



                <li class="menu-item">
                    <a class="menu-link d-flex align-items-center gap-2" href="/admin/users">
                        <i class="material-icons" style="font-size: 1.5rem;">groups</i>
                        <span class="menu-text" style="font-size: 1.2rem; font-weight: 600;">Customers</span>
                    </a>
                </li>



                <li class="menu-item">
                    <a class="menu-link d-flex align-items-center gap-2" href="/admin/category">
                        <i class="material-icons" style="font-size: 1.5rem;">category</i>
                        <span class="menu-text" style="font-size: 1.2rem; font-weight: 600;">Categories</span>
                    </a>
                </li>



                <li class="menu-item">
                    <a class="menu-link d-flex align-items-center gap-2" href="/admin/products">
                        <i class="material-icons" style="font-size: 1.5rem;">inventory_2</i>
                        <span class="menu-text" style="font-size: 1.2rem; font-weight: 600;">Products</span>
                    </a>
                </li>





                <li class="menu-item">
                    <a class="menu-link d-flex align-items-center gap-2" href="/admin/addproducts">
                        <i class="material-icons" style="font-size: 1.5rem;">add_circle</i>
                        <span class="menu-text" style="font-size: 1.2rem; font-weight: 600;">Add Product</span>
                    </a>
                </li>




                <li class="menu-item">
                    <a class="menu-link d-flex align-items-center gap-2" href="/admin/orders">
                        <i class="material-icons" style="font-size: 1.5rem;">receipt_long</i>
                        <span class="menu-text" style="font-size: 1.2rem; font-weight: 600;">Orders</span>
                    </a>
                </li>




                <li class="menu-item">
                    <a class="menu-link d-flex align-items-center gap-2" href="/admin/coupons">
                        <i class="material-icons" style="font-size: 1.5rem;">local_offer</i>
                        <span class="menu-text" style="font-size: 1.2rem; font-weight: 600;">Coupons</span>
                    </a>
                </li>



                <li class="menu-item">
                    <a class="menu-link d-flex align-items-center gap-2" href="/admin/salesReport">
                        <i class="material-icons" style="font-size: 1.5rem;">bar_chart</i>
                        <span class="menu-text" style="font-size: 1.2rem; font-weight: 600;">Sales Report</span>
                    </a>
                </li>


                <li class="menu-item">
                    <a class="menu-link d-flex align-items-center gap-2" href="/admin/logout">
                        <i class="material-icons" style="font-size: 1.5rem;">logout</i>
                        <span class="menu-text" style="font-size: 1.2rem; font-weight: 600;">Logout</span>
                    </a>
                </li>


            </ul>
        </nav>
    </aside>
    <main class="main-wrap">
        <header class="main-header navbar">
            <div class="col-search">
            </div>
        </header>

        <script>
            document.addEventListener('DOMContentLoaded', () => {

                const currentPath = window.location.pathname;


                const menuLinks = document.querySelectorAll('.menu-link');


                menuLinks.forEach(link => {

                    let linkPath = link.getAttribute('href');
                    if (linkPath.endsWith('/')) {
                        linkPath = linkPath.slice(0, -1);
                    }


                    let normalizedCurrentPath = currentPath;
                    if (normalizedCurrentPath.endsWith('/')) {
                        normalizedCurrentPath = normalizedCurrentPath.slice(0, -1);
                    }


                    if (linkPath === '/admin/add-products' && normalizedCurrentPath === '/admin/addProducts') {
                        link.classList.add('active');
                    } else if (linkPath === '/admin/addProducts' && normalizedCurrentPath === '/admin/add-products') {
                        link.classList.add('active');
                    }

                    else if (linkPath === '/admin/categories' && normalizedCurrentPath === '/admin/category') {
                        link.classList.add('active');
                    } else if (linkPath === '/admin/category' && normalizedCurrentPath === '/admin/categories') {
                        link.classList.add('active');
                    }

                    else if (linkPath === '/admin/coupons' && normalizedCurrentPath === '/admin/coupon') {
                        link.classList.add('active');
                    } else if (linkPath === '/admin/coupon' && normalizedCurrentPath === '/admin/coupons') {
                        link.classList.add('active');
                    }

                    else if (linkPath === normalizedCurrentPath) {
                        link.classList.add('active');
                    }
                });
            });
        </script>
</body>

</html>