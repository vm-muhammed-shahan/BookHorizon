 <!-- SweetAlert CDN -->
 <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
 
 <!-- SweetAlert Block/Unblock Confirmation -->
 <script>
   document.addEventListener("DOMContentLoaded", () => {
     const buttons = document.querySelectorAll(".block-btn, .unblock-btn");
 
     buttons.forEach(button => {
       button.addEventListener("click", function () {
         const url = this.dataset.href;
         const isUnblock = url.includes("unblockCustomer");
 
         Swal.fire({
           title: isUnblock ? "Unblock this user?" : "Block this user?",
           text: isUnblock ? "The user will regain access." : "The user will be blocked from accessing the site.",
           icon: "warning",
           showCancelButton: true,
           confirmButtonColor: isUnblock ? "#28a745" : "#d33",
           cancelButtonColor: "#3085d6",
           confirmButtonText: isUnblock ? "Yes, Unblock!" : "Yes, Block!"
         }).then((result) => {
           if (result.isConfirmed) {
             window.location.href = url;
           }
         });
       });
     });
   });
 </script>
 
