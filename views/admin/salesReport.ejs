<%- include("../../views/partials/admin/header") %>

  <style>
    .card {
      border-radius: 8px;
      border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .table th {
      font-weight: 600;
    }

    .btn-outline-secondary {
      color: #38b2ac;
      border-color: #38b2ac;
    }

    .btn-outline-secondary:hover {
      background-color: #38b2ac;
      color: white;
      border-color: #38b2ac;
    }
  </style>

  <div class="container-fluid py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h2 class="fw-bold text-dark">Sales Report</h2>
    </div>


    <!-- Filter Form -->
    <div class="card shadow-sm mb-4">
      <div class="card-body p-3">
        <form method="get" action="/admin/salesReport" class="row g-3" style="min-height: 100px;">
          <!-- Added min-height -->
          <div class="col-md-3">
            <label class="form-label">Filter By</label>
            <select name="filter" id="filterSelect" class="form-select" onchange="toggleCustomDate(this)">
              <option value="daily" <%=filter==='daily' ? 'selected' : '' %>>Daily</option>
              <option value="weekly" <%=filter==='weekly' ? 'selected' : '' %>>Weekly</option>
              <option value="monthly" <%=filter==='monthly' ? 'selected' : '' %>>Monthly</option>
              <option value="yearly" <%=filter==='yearly' ? 'selected' : '' %>>Yearly</option>
              <option value="custom" <%=filter==='custom' ? 'selected' : '' %>>Custom Range</option>
            </select>
          </div>
          <div class="col-md-3 custom-date" style="display: <%= filter === 'custom' ? 'block' : 'none' %>;">
            <label class="form-label">Start Date</label>
            <input type="date" name="startDate" id="startDate" class="form-control" value="<%= startDate || '' %>">
          </div>
          <div class="col-md-3 custom-date" style="display: <%= filter === 'custom' ? 'block' : 'none' %>;">
            <label class="form-label">End Date</label>
            <input type="date" name="endDate" id="endDate" class="form-control" value="<%= endDate || '' %>">
          </div>
          <div class="col-md-2">
            <label class="form-label">Status</label>
            <select name="status" class="form-select">
              <option value="" <%=!status ? 'selected' : '' %>>All</option>
              <option value="Pending" <%=status && status.includes('Pending') ? 'selected' : '' %>>Pending</option>
              <option value="Processing" <%=status && status.includes('Processing') ? 'selected' : '' %>>Processing
              </option>
              <option value="Shipped" <%=status && status.includes('Shipped') ? 'selected' : '' %>>Shipped</option>
              <option value="Out for Delivery" <%=status && status.includes('Out for Delivery') ? 'selected' : '' %>>Out
                for Delivery</option>
              <option value="Delivered" <%=status && status.includes('Delivered') ? 'selected' : '' %>>Delivered
              </option>
              <option value="Cancelled" <%=status && status.includes('Cancelled') ? 'selected' : '' %>>Cancelled
              </option>
              <option value="Return Request" <%=status && status.includes('Return Request') ? 'selected' : '' %>>Return
                Request</option>
              <option value="Returned" <%=status && status.includes('Returned') ? 'selected' : '' %>>Returned</option>
            </select>
          </div>
          <div class="col-md-2 d-flex align-items-center gap-2" style="min-height: 100px;"> <!-- Added min-height -->
            <button type="submit" class="btn btn-dark">Apply</button>
            <button type="button" class="btn btn-outline-secondary"
              onclick="window.location.href='/admin/salesReport'">Clear Filters</button>
          </div>
        </form>
      </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Total Sales Count</h5>
            <p class="card-text fs-4">
              <%= summary.totalSalesCount %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Total Order Amount</h5>
            <p class="card-text fs-4">
              <%= formatIndianCurrency(summary.totalOrderAmount) %>
            </p>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card shadow-sm">
          <div class="card-body">
            <h5 class="card-title">Total Discount</h5>
            <p class="card-text fs-4">
              <%= formatIndianCurrency(summary.totalDiscount) %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <!-- Sales Report Table -->
    <div class="card shadow-sm">
      <div class="card-body">
        <div class="d-flex justify-content-between mb-3">
          <h5>Sales Details</h5>
          <div>
            <button class="btn btn-success me-2" onclick="downloadReport('pdf')">Download PDF</button>
            <button class="btn btn-primary" onclick="downloadReport('excel')">Download Excel</button>
          </div>
        </div>
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="bg-light">
              <tr>
                <th class="px-3 py-3 text-center">#</th>
                <th class="px-3 py-3">Order ID</th>
                <th class="px-3 py-3">Date</th>
                <th class="px-3 py-3">Customer</th>
                <th class="px-3 py-3">Total Amount</th>


                <th class="px-3 py-3">Final Amount</th>
                <th class="px-3 py-3">Status</th>
              </tr>
            </thead>
            <tbody>
              <% if (orders.length===0) { %>
                <tr>
                  <td colspan="9" class="text-center">No orders found.</td>
                </tr>
                <% } else { %>
                  <% orders.forEach((order, index)=> { %>
                    <tr class="<%= index % 2 === 0 ? 'bg-white' : 'bg-light' %>">
                      <td class="px-3 py-3 text-center">
                        <%= index + 1 %>
                      </td>
                      <td class="px-3 py-3">
                        <%= order.orderId.substring(0, 8) %>
                      </td>
                      <td class="px-3 py-3">
                        <%= new Date(order.createdOn).toLocaleDateString() %>
                      </td>
                      <td class="px-3 py-3">
                        <%= order.user ? order.user.name : 'N/A' %>
                      </td>
                      <td class="px-3 py-3">
                        <%= formatIndianCurrency(order.totalPrice || 0) %>
                      </td>

                      <td class="px-3 py-3">
                        <%= formatIndianCurrency(order.finalAmount || 0) %>
                      </td>
                      <td class="px-3 py-3">
                        <%= order.status %>
                      </td>
                    </tr>
                    <% }) %>
                      <% } %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10/dist/sweetalert2.min.js"></script>
  <script src="https://cdnjs.cloudflare.net/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
  <script src="https://kit.fontawesome.com/16d4885483.js" crossorigin="anonymous"></script>

  <script>
    function toggleCustomDate(select) {
    const customDateFields = document.querySelectorAll('.custom-date');
    const startDateInput = document.getElementById('startDate');
    const endDateInput = document.getElementById('endDate');
    const today = new Date().toISOString().split("T")[0]; 

    if (select.value === 'custom') {
      customDateFields.forEach(field => field.style.display = 'block');

      startDateInput.max = today;
      endDateInput.max = today;

      updateEndDateMin(); 
    } else {
      customDateFields.forEach(field => field.style.display = 'none');

      startDateInput.removeAttribute('max');
      endDateInput.removeAttribute('max');
      endDateInput.removeAttribute('min');
    }
  }

  function updateEndDateMin() {
    const startDateInput = document.getElementById('startDate');
    const endDateInput = document.getElementById('endDate');
    const filterSelect = document.getElementById('filterSelect');
    const today = new Date().toISOString().split("T")[0];

    if (filterSelect.value === 'custom') {
      if (startDateInput.value) {
        endDateInput.min = startDateInput.value;
        if (endDateInput.value && endDateInput.value < startDateInput.value) {
          endDateInput.value = '';
        }
      } else {
        endDateInput.removeAttribute('min');
      }

      endDateInput.max = today;
    }
  }

  document.getElementById('startDate').addEventListener('change', updateEndDateMin);

  document.addEventListener('DOMContentLoaded', () => {
    if (document.getElementById('filterSelect').value === 'custom') {
      toggleCustomDate(document.getElementById('filterSelect'));
    }
  })

function downloadReport(format) {
      const filter = '<%= filter %>';
      const startDate = '<%= startDate || '' %>';
      const endDate = '<%= endDate || '' %>';
      const status = '<%= status || '' %>';
      let url = `/admin/sales-report/download?format=${format}&filter=${filter}`;
      if (startDate && endDate) url += `&startDate=${startDate}&endDate=${endDate}`;
      if (status) url += `&status=${status}`;
      window.location.href = url;
    }
  </script>

  <style>
    .card {
      border-radius: 8px;
      border: 1px solid rgba(0, 0, 0, 0.125);
    }

    .table th {
      font-weight: 600;
    }
  </style>

  <%- include("../../views/partials/admin/footer") %>
