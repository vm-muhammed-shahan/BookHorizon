<%- include("../partials/admin/header") %>
<section class="content-main p-4" style="background-color: #f8f9fa;">
    <div class="content-header mb-4">
        <h2 class="content-title text-primary">Admin Dashboard</h2>
    </div>

    <!-- Key Metrics -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Sales</h5>
                    <h2 class="display-5"><%= totalSales.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %></h2>
                    <p class="card-text">Across all time</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-info h-100">
                <div class="card-body">
                    <h5 class="card-title">Total Orders</h5>
                    <h2 class="display-5"><%= totalOrders.toLocaleString() %></h2>
                    <p class="card-text">Completed orders</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card text-white bg-warning h-100">
                <div class="card-body">
                    <h5 class="card-title">Avg. Order Value</h5>
                    <h2 class="display-5"><%= avgOrderValue.toLocaleString('en-IN', { style: 'currency', currency: 'INR' }) %></h2>
                    <p class="card-text">Per order</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Sales Overview -->
    <div class="card mb-4">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h4 class="card-title">Sales Overview</h4>
            <select id="filterType" class="form-select" style="width: 200px;">
                <option value="yearly" <%= filterType === 'yearly' ? 'selected' : '' %>>Yearly</option>
                <option value="monthly" <%= filterType === 'monthly' ? 'selected' : '' %>>Monthly</option>
                <option value="weekly" <%= filterType === 'weekly' ? 'selected' : '' %>>Weekly</option>
            </select>
        </div>
        <div class="card-body">
            <canvas id="salesChart" height="200"></canvas>
        </div>
    </div>

    <!-- Category Distribution -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="card-title">Category Distribution</h4>
        </div>
        <div class="card-body">
            <canvas id="categoryChart" height="200"></canvas>
        </div>
    </div>

    <!-- Top Categories -->
    <div class="card mb-4">
        <div class="card-header">
            <h4 class="card-title">Top 10 Best-Selling Categories</h4>
        </div>
        <div class="card-body">
            <div class="row g-3">
                <% topCategories.forEach(category => { %>
                <div class="col-md-6">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title"><%= category.categoryName %></h5>
                            <div class="progress">
                                <div class="progress-bar bg-primary" role="progressbar" style="width: <%= (category.totalSold / (topCategories[0]?.totalSold || 1) * 100) %>%;" aria-valuenow="<%= category.totalSold %>" aria-valuemin="0" aria-valuemax="<%= topCategories[0]?.totalSold || 1 %>"></div>
                            </div>
                            <p class="card-text mt-2">Total Sold: <%= category.totalSold %></p>
                        </div>
                    </div>
                </div>
                <% }) %>
            </div>
        </div>
    </div>
</section>
<%- include("../partials/admin/footer") %>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Sales Chart
    const ctx = document.getElementById('salesChart').getContext('2d');
    const salesChart = new Chart(ctx, {
        type: 'line',
        data: {
            labels: <%- JSON.stringify(labels) %>,
            datasets: [{
                label: 'Sales (₹)',
                data: <%- JSON.stringify(salesData) %>,
                borderColor: 'rgba(54, 162, 235, 1)',
                backgroundColor: 'rgba(54, 162, 235, 0.2)',
                borderWidth: 2,
                fill: true,
                tension: 0.4,
            }],
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            scales: {
                y: {
                    beginAtZero: true,
                    title: { display: true, text: 'Sales Amount (₹)' },
                },
                x: {
                    title: { display: true, text: '<%= filterType === "yearly" ? "Month" : filterType === "monthly" ? "Day" : "Day of Week" %>' },
                },
            },
            plugins: {
                tooltip: { mode: 'index', intersect: false },
                legend: { position: 'top' },
            },
        },
    });

    // Category Chart
    const categoryCtx = document.getElementById('categoryChart').getContext('2d');
    const categoryChart = new Chart(categoryCtx, {
        type: 'pie',
        data: {
            labels: <%- JSON.stringify(topCategories.map(c => c.categoryName)) %>,
            datasets: [{
                data: <%- JSON.stringify(topCategories.map(c => c.totalSold)) %>,
                backgroundColor: ['#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF', '#FF9F40', '#C9CBCF', '#FF5733', '#33FF57', '#5733FF'],
            }],
        },
        options: {
            responsive: true,
            maintainAspectRatio: false,
            plugins: {
                legend: { position: 'right' },
                tooltip: { callbacks: { label: ctx => `${ctx.label}: ${ctx.raw} units` } },
            },
        },
    });

    document.getElementById('filterType').addEventListener('change', function () {
        window.location.href = `/admin/dashboard?filter=${this.value}`;
    });
</script>
<style>
    .card { border: none; border-radius: 10px; box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1); }
    .card-header { background-color: #e9ecef; border-bottom: none; }
    .card-title { font-weight: 600; }
    .progress { height: 20px; border-radius: 10px; }
    .progress-bar { border-radius: 10px; }
    .content-main { min-height: 80vh; }
</style>